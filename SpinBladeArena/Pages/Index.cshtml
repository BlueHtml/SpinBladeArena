@page
@using SpinBladeArena.Controllers
@using SpinBladeArena.LogicCenter
@using SpinBladeArena.Users
@inject GameManager GameManager
@inject UserManager UserManager
@model SpinBladeArena.Pages.IndexModel
@{
}

<html lang="zh-hans">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1" />
    <title>旋刃竞技场 - 房间列表</title>
</head>
<body>
    <label>用户名：</label>
    <input type="text" id="username" />
    <button type="button" onclick="saveName()">更新用户名</button>
    <span id="statusText" style="color: green"></span>

    <h1>房间列表</h1>
    <table>
        <thead>
            <tr>
                <th>房间号</th>
                <th>人数</th>
                <th>创建者</th>
                <th>创建时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody id="room-list">
            @foreach (var room in GameManager.Lobbies.Values.OrderByDescending(x => x.Id))
            {
                <tr>
                    <td>@room.Id</td>
                    <td>@room.Players.Count</td>
                    <td>@UserManager.GetUser(room.CreateUserId)?.Name</td>
                    <td>@room.CreateTime</td>
                    <td><button type="button" onclick="join(@room.Id)">加入</button></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">
                    <button onclick="createRoom()">创建新房间</button>
                </td>
            </tr>
        </tfoot>
    </table>

    <script src="~/userManager.js"></script>
    <script>
        async function createRoom() {
            const createLobbyResp = await fetch('/lobby', {
                method: 'POST',
                headers: {
                    Authorization: `bearer ${await ensureToken()}`,
                },
            });
            if (createLobbyResp.ok) {
                const lobbyId = await createLobbyResp.text();
                window.location.href = `/lobby/${lobbyId}`;
            }
        }

        function join(lobbyId) {
            window.location.href = `/lobby/${lobbyId}`;
        }

        const userNameInput = document.getElementById('username');
        const statusTextSpan = document.getElementById('statusText');
        let userName = localStorage.getItem('userName');
        if (!userName) {
            userName = randomName();
            localStorage.setItem('userName', userName);
        }
        userNameInput.value = userName;

        async function saveName() {
            localStorage.setItem('userName', userNameInput.value);
            await ensureToken();
            statusTextSpan.innerText = `用户名已更新为: ${userNameInput.value}`;
        }
    </script>
</body>
</html>